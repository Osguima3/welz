# Frontend configuration
WEB_HOST=http://localhost          # Hostname for the web frontend server
WEB_PORT=8001                      # Port for the web frontend server

# Backend configuration
BACKEND_HOST=http://localhost      # Hostname for the backend server
BACKEND_PORT=8000                  # Port for the backend server
CORS_ORIGIN=http://localhost:8001  # Origin for CORS headers

# Database configuration
DATABASE_HOST=localhost            # Hostname for the database server
DATABASE_PORT=5432                 # Port for the database server
DATABASE_NAME=welz_db              # Name of the database
DATABASE_USER=user                 # Username for the database
DATABASE_PASSWORD=password         # Password for the database user
DATABASE_SSL=false                 # Use SSL for database connection (true/false)
DATABASE_POOL_SIZE=10              # Connection pool size for the database